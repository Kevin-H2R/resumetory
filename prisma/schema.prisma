generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  userId    String?  @unique
  email     String   @unique
  createdAt DateTime @default(now())
  firstname String?
  lastname String?
  phoneCode String?
  phoneNumber String?
  location String?
  linkedIn String?
  link String?
  experiences Experience[]
}

model Experience {
  id String @id @default(cuid())
  user User @relation(fields: [userId], references: [id])
  userId String
  startDate DateTime
  endDate DateTime?
  company String
  current Boolean?
  description String
}